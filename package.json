{
  "name": "brickyard",
  "author": "e-cloud",
  "version": "3.0.0",
  "description": "plugin framework for building extendable and flexible web apps or back-end services.",
  "main": "index.js",
  "bin": {
    "brickyard": "./base/brickyard-cli.js",
    "by": "./base/brickyard-cli.js"
  },
  "dependencies": {
    "brickyard-command-dev": "file:./lib/commands/dev",
    "brickyard-command-init": "file:./lib/commands/init",
    "brickyard-command-inspect": "file:./lib/commands/inspect",
    "brickyard-command-install": "file:./lib/commands/install",
    "brickyard-command-release": "file:./lib/commands/release",
    "brickyard-command-run": "file:./lib/commands/run",
    "commander": "^2.9.0",
    "del": "^2.2.0",
    "eslint": "^2.3.0",
    "glob": "^7.0.3",
    "liftoff": "^2.2.0",
    "lodash": "^4.6.1",
    "log4js": "^0.6.33",
    "minimist": "^1.2.0",
    "globby": "^4.0.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "conventional-changelog": "^1.1.0",
    "dev-null": "^0.1.1",
    "eslint": "^2.8.0",
    "eslint-config-airbnb": "^8.0.0",
    "eslint-plugin-import": "^1.5.0",
    "ghooks": "^1.2.1",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "validate-commit-msg": "^2.6.1"
  },
  "scripts": {
    "test": "mocha test",
    "test-cov": "istanbul cover node_modules/mocha/bin/_mocha -- -i -f 'staller' --reporter dot --check-leaks test"
  },
  "license": "ISC",
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 72,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg",
      "post-merge": "npm install",
      "post-rewrite": "npm install"
    }
  }
}
