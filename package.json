{
  "name": "brickyard3",
  "author": "e-cloud",
  "version": "1.2.0",
  "description": "plugin framework for building extendable and flexible web apps or back-end services.",
  "main": "index.js",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:draykcirb/brickyard3.git"
  },
  "bin": {
    "brickyard3": "./base/brickyard-cli.js",
    "by": "./base/brickyard-cli.js"
  },
  "dependencies": {
    "bluebird": "^3.4.0",
    "commander": "^2.9.0",
    "del": "^2.2.0",
    "glob": "^7.0.3",
    "globby": "^6.0.0",
    "liftoff": "^2.2.0",
    "lodash": "^4.15.0",
    "log4js": "^0.6.33"
  },
  "devDependencies": {
    "brickyard-command-init": "*",
    "chai": "^3.5.0",
    "eslint": "^3.5.0",
    "eslint-config-airbnb-base": "^5.0.0",
    "eslint-plugin-import": "^1.15.0",
    "ghooks": "^1.2.1",
    "istanbul": "^0.4.2",
    "mocha": "^3.0.0",
    "standard-version": "^2.4.0",
    "validate-commit-msg": "^2.8.0"
  },
  "scripts": {
    "lint": "eslint lib/ base/",
    "test": "mocha test",
    "test-cov": "istanbul cover mocha -- -i -f 'staller' --reporter dot --check-leaks test",
    "version": "standard-version",
    "postversion": "git push && git push --tags && npm publish . --registry=https://registry.npmjs.org/"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "example",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 72,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": "\n# allowed type: feat, fix, docs, style, refactor, example, perf, test, chore, revert\n# subject no more than 50 chars\n# a body line no more than 72 chars"
    },
    "ghooks": {
      "//": {
        "pre-commit": "check code style",
        "post-checkout": "npm install"
      },
      "commit-msg": "validate-commit-msg",
      "post-rewrite": "npm install",
      "post-merge": "npm install"
    }
  }
}
