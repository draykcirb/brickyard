{
  "name": "brickyard3",
  "author": "e-cloud",
  "version": "1.0.1",
  "description": "plugin framework for building extendable and flexible web apps or back-end services.",
  "main": "index.js",
  "bin": {
    "brickyard": "./base/brickyard-cli.js",
    "by": "./base/brickyard-cli.js"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "del": "^2.2.0",
    "glob": "^7.0.3",
    "globby": "^5.0.0",
    "liftoff": "^2.2.0",
    "lodash": "^4.6.1",
    "log4js": "^0.6.33",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "brickyard-command-init": "*",
    "chai": "^3.5.0",
    "conventional-changelog": "^1.1.0",
    "eslint": "^3.0.0",
    "eslint-config-airbnb-base": "^4.0.0",
    "eslint-plugin-import": "^1.5.0",
    "ghooks": "^1.2.1",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "validate-commit-msg": "^2.6.1"
  },
  "scripts": {
    "lint": "eslint lib/ base/",
    "test": "mocha test",
    "test-cov": "istanbul cover mocha -- -i -f 'staller' --reporter dot --check-leaks test"
  },
  "license": "ISC",
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 72,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    },
    "ghooks": {
      "//": {
        "pre-commit": "check code style",
        "post-checkout": "npm install"
      },
      "commit-msg": "validate-commit-msg",
      "post-rewrite": "npm install",
      "post-merge": "npm install"
    }
  }
}
